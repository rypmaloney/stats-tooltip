{
    "manifest_version": 3,
    "name": "Stats Tooltip",
    "description": "Enrich webpages with baseball data.",
    "version": "1.0",
    "permissions": ["tabs", "activeTab", "scripting", "storage"],
    "host_permissions": ["*://*/*"],
    "content_scripts": [
        {
            "exclude_matches": [
                "*://theathletic.com/",
                "*://www.mlb.com/",
                "*://www.reddit.com/*",
                "*://www.twitter.com/*",
                "*://www.fangraphs.com/"
            ],
            "matches": ["*://*/*"],

            "js": ["content.js"],
            "css": ["content.css"],
            "type": "module"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "matches": ["<all_urls>"],
            "resources": ["map.json", "settings.js"]
        }
    ]
}
