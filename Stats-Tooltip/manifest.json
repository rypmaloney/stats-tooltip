{
    "manifest_version": 3,
    "name": "Stats Tooltip",
    "description": "Enrich webpages with baseball data.",
    "version": "1.0",
    "permissions": ["tabs", "activeTab", "scripting", "storage"],
    "host_permissions": ["*://*/*"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js", "settings.js"],
            "css": ["content.css"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "matches": ["<all_urls>"],
            "resources": ["map.json"]
        }
    ]
}
